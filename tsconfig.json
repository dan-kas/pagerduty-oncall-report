{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "paths": {
      "#app/*": ["./src/*"]
    },
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src"
  ]
}
