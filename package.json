{
  "name": "@dan-kas/pd-oncall",
  "version": "0.7.0",
  "packageManager": "pnpm@8.7.0",
  "description": "PagerDuty report generator for single month on-call",
  "author": "Daniel Kasprzyk <dankas12@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dan-kas/pagerduty-oncall-report.git"
  },
  "keywords": [],
  "bin": {
    "pd-oncall": "dist/bin/cli.js"
  },
  "files": [
    "./dist/**/*.js",
    "./dist/**/*.js.map"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc -p tsconfig.build.json --noEmit",
    "build": "npm run build:app && npm run build:bin",
    "build:app": "rimraf dist && tsc -p tsconfig.build.json && resolve-tspaths -p tsconfig.build.json",
    "build:bin": "rimraf build && npx pkg . --no-bytecode --public-packages \"*\" --public -C GZip",
    "bump": "bumpp"
  },
  "peerDependencies": {
    "@clack/prompts": "^0.7.0"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^11.0.0",
    "@pagerduty/pdjs": "^2.2.4",
    "commander": "^11.0.0",
    "cross-fetch": "^4.0.0",
    "date-fns": "^2.30.0",
    "kolorist": "^1.8.0",
    "update-notifier": "^6.0.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.41.0",
    "@types/node": "^20.5.7",
    "@types/update-notifier": "^6.0.5",
    "@vitest/coverage-v8": "^0.34.3",
    "bumpp": "^9.2.0",
    "eslint": "^8.48.0",
    "lint-staged": "^14.0.1",
    "resolve-tspaths": "^0.8.15",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.9.0",
    "typescript": "~5.1.6",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "pnpm type-check && pnpm test"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "pkg": {
    "scripts": [
      "./dist/**/*.js"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "outputPath": "build"
  }
}
