{
  "name": "@dan-kas/pd-oncall",
  "type": "module",
  "version": "0.4.1",
  "packageManager": "pnpm@8.7.0",
  "description": "PagerDuty report generator for single month on-call",
  "author": "Daniel Kasprzyk <dankas12@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dan-kas/pagerduty-oncall-report"
  },
  "keywords": [],
  "exports": {
    "*": null
  },
  "bin": {
    "pd-oncall": "./cli.mjs"
  },
  "files": [
    "./cli.mjs",
    "./dist/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc -p tsconfig.build.json",
    "build": "rimraf dist && tsc -p tsconfig.build.json && resolve-tspaths",
    "bump": "bumpp"
  },
  "peerDependencies": {
    "@clack/prompts": "^0.7.0"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^11.0.0",
    "@pagerduty/pdjs": "^2.2.4",
    "commander": "^11.0.0",
    "consola": "^3.2.3",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.41.0",
    "@types/node": "^20.5.7",
    "@vitest/coverage-v8": "^0.34.3",
    "bumpp": "^9.2.0",
    "eslint": "^8.48.0",
    "lint-staged": "^14.0.1",
    "resolve-tspaths": "^0.8.15",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.9.0",
    "typescript": "~5.1.6",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "pnpm type-check && pnpm test"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  }
}
