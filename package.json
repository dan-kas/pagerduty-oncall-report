{
  "name": "@dan-kas/pd-oncall",
  "type": "module",
  "version": "0.8.2",
  "packageManager": "pnpm@10.28.0",
  "description": "PagerDuty report generator for single month on-call",
  "author": "Daniel Kasprzyk <dankas12@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dan-kas/pagerduty-oncall-report.git"
  },
  "keywords": ["pagerduty", "oncall", "cli", "typescript", "nodejs"],
  "bin": {
    "pd-oncall": "./dist/index.mjs"
  },
  "files": [
    "./dist/index.mjs"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "build": "npm run build:app && npm run build:bin",
    "build:app": "tsdown",
    "build:bin": "rimraf build && npx pkg . --no-bytecode --public-packages \"*\" --public -C GZip",
    "bump": "bumpp",
    "githooks": "npx simple-git-hooks"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@commander-js/extra-typings": "^11.0.0",
    "commander": "^11.0.0",
    "date-fns": "^2.30.0",
    "kolorist": "^1.8.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.0.1",
    "@types/node": "^24.10.9",
    "@types/update-notifier": "^6.0.8",
    "@vitest/coverage-v8": "^4.0.17",
    "bumpp": "^9.2.0",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "resolve-tspaths": "^0.8.15",
    "rimraf": "^6.1.2",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "0.20.0-beta.3",
    "typescript": "~5.9.3",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^4.0.17"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "pnpm type-check && pnpm test:run"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "pkg": {
    "scripts": [
      "./dist/**/*.js"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "outputPath": "build"
  }
}
